import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class FileCreator {
    public static void main(String[] args) {
        try {
                FileWriter myWriter = new FileWriter("C:\\Users\\dpetkov\\Desktop\\filename1.txt");
                myWriter.write("Files in Java might be tricky, but it is fun enough9999999999!");
                myWriter.close();
                System.out.println("Successfully wrote to the file.");
            } catch (IOException e) {
                System.out.println("An error occurred.");
                e.printStackTrace();
            }
        }
    }
